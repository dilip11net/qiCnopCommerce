@using Nop.Core;

@inject IWorkContext workContext

@{
    var supportRtl = workContext.WorkingLanguage.Rtl;

    var isIe8 = false;
    var userAgent = Url.ActionContext.HttpContext.Request.Headers["User-Agent"];
    if (!String.IsNullOrEmpty(userAgent) && userAgent.ToString().ToLower().IndexOf("MSIE 8.0", StringComparison.InvariantCultureIgnoreCase) > 0)
    {
        isIe8 = true;
    }
    
    if (isIe8)
    {
        if (supportRtl)
        {
            Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/ie8-fix.rtl.css");
        }
        else
        {
            Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/ie8-fix.css");
        }
    }

    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");
    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/simplebar.css");

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/1280.rtl.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/980.rtl.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/mobile-only.rtl.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/tables.rtl.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/1280.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/980.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/768.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/480.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/mobile-only.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/tables.css");
        Html.AppendCssFileParts("~/Themes/Brooklyn/Content/css/styles.css");
    }

    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/footable.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/simplebar.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.ex.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/jquery.styleSelect.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/jquery.jscrollpane.min.js");
    if (isIe8)
    {
        Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/selectivizr.min.js");
        Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/respond.min.js");
    }
    Html.AddScriptParts(ResourceLocation.Footer, "~/Themes/Brooklyn/Content/scripts/brooklyn.js");
}